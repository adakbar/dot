filetype on
filetype plugin on
filetype indent on
syntax on

let mapleader=";"

inoremap kj <Esc>

set number
set relativenumber
set showbreak=+++
set textwidth=100
set showmatch
set nohlsearch
set smartcase
set ignorecase
set incsearch
set autoindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set ruler
set undolevels=1000
set backspace=indent,eol,start
set mouse=a
